<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CVAssistant">

    <Style x:Key="BaseSizes" TargetType="Control">
        <Style.Setters>
            <Setter Property="Control.Width" Value="120" />
            <Setter Property="Control.Height" Value="25" />
            <Setter Property="Control.Margin" Value="3" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Center" />
            <Setter Property="Control.FontSize" Value="14" />
        </Style.Setters>
    </Style>

    
    <Style TargetType="Button" BasedOn="{StaticResource BaseSizes}">
        <Style.Setters>
        </Style.Setters>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource BaseSizes}">
        <Style.Setters>
        </Style.Setters>
    </Style>

</ResourceDictionary>